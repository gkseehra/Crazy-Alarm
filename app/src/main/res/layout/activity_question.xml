<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/LightGrey"
    tools:context="com.example.gurleen.crazyalarm.utilities.Question">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To Turn Off the alarm answer the following question!"
        android:textSize="25sp"
        android:background="@color/BlueGrey"
        android:textColor="@color/LightGrey"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/Black"
        android:id="@+id/questionTV"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/answerHintText"
        android:id="@+id/answerET"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@color/BlueGrey"
        android:textColor="@color/White"
        android:id="@+id/submitAnswerB"
        android:onClick="submitAnswer"/>
</LinearLayout>
